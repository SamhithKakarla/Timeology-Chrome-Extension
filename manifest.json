{
    "manifest_version": 2,
    "name": "Timeology",
    "version": "1.0",
    "description": "Timeology helps you organize your time.",
    "permissions": [
        "declarativeContent",
        "storage",
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "Script/background.js"
        ],
        "persistent": true
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/Clock.png",
            "32": "images/Clock.png",
            "48": "images/Clock.png",
            "128": "images/Clock.png"
        }
    },
    "icons": {
        "16": "images/Clock.png",
        "32": "images/Clock.png",
        "48": "images/Clock.png",
        "128": "images/Clock.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.schoology.com/*"
            ],
            "js": [
                "jquery-3.3.1.min.js",
                "bootstrap/js/bootstrap.min.js",
                "app.js"
            ],
            "css": [
                "bootstrap/css/bootstrap.min.css"
            ],
            "run_at": "document_idle"
        }
    ]
}