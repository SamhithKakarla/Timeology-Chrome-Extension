{
    "manifest_version": 2,
    "name": "Timeology",
    "version": "1.0",
    "description": "Timeology helps you organize your time.",
    "permissions": [
        "declarativeContent",
        "storage",
        "tabs"

    ],
    "background" :{
        "scripts": ["Script/background.js"],
        "persistent": true
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/clock.png",
            "32": "images/clock.png",
            "48": "images/clock.png",
            "128": "images/clock.png"
        }
    },
    "icons": {
        "16": "images/clock.png",
        "32": "images/clock.png",
        "48": "images/clock.png",
        "128": "images/clock.png"
    }
}