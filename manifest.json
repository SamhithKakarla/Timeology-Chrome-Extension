{
    "manifest_version": 2,
    "name": "Timeology",
    "version": "1.0",
    "description": "Timeology is a personalized tool that uses your help to provide you with an accurate estimate of how much work you have so that you can better manage your time",
    "permissions": [
        "declarativeContent",
        "storage",
        "tabs"
    ],
   "background": {
        "scripts": ["Script/background.js"],
        "persistant": false
   },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/SC.png",
            "32": "images/SC.png", 
            "48": "images/SC.png",
            "128": "images/SC.png"
        }
    },
    "icons": {
        "16": "images/SC.png",
        "32": "images/SC.png",
        "48": "images/SC.png",
        "128": "images/SC.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://fuhsd.schoology.com/*"
            ],
            "exclude_matches": ["https://fuhsd.schoology.com/courses*"],
            "js": [
                "script/jquery-3.3.1.min.js",
                "bootstrap/js/bootstrap.min.js",
                "script/assignmentRead.js"
            ],
            "css": [
                "bootstrap/css/bootstrap.min.css"
            ]
        },
        {
            "matches": [
                "https://fuhsd.schoology.com/courses*"
            ],
            "js": [
                "script/jquery-3.3.1.min.js",
                "bootstrap/js/bootstrap.min.js",
                "script/courseRead.js"
            ],
            "css": [
                "bootstrap/css/bootstrap.min.css"
            ]
        }
    ],

    "content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'"
}